<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alanhughjones.studyeasy.EditTaskActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/edit_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/add_task_done"
        android:layout_toLeftOf="@id/add_task_done"
        android:layout_alignBottom="@+id/edit_task_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:text="Edit Task"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/edit_task_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_new_task"
        android:layout_alignBottom="@+id/edit_new_task"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/transparent"
        android:text="@string/done"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:textAllCaps="false" />

    <TextView
        android:id="@+id/input_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_new_task"
        android:layout_alignStart="@+id/edit_new_task"
        android:layout_below="@+id/edit_task_toolbar"
        android:layout_marginTop="18dp"
        android:text="@string/task_name_input"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_task_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_alignLeft="@+id/input_edit_title"
        android:layout_alignStart="@+id/input_edit_title"
        android:layout_below="@+id/input_edit_title"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/edit_duedate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_new_task"
        android:layout_alignStart="@+id/edit_new_task"
        android:layout_below="@+id/edit_task_input"
        android:layout_marginTop="10dp"
        android:text="@string/duedate_input"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/edit_datepick_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_new_task"
        android:layout_alignStart="@+id/edit_new_task"
        android:layout_below="@+id/edit_duedate_title"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:text="Change Date"
        android:textColor="@android:color/background_light"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/delete_task"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_new_task"
        android:layout_alignLeft="@+id/edit_new_task"
        android:layout_marginBottom="30dp"
        android:background="#ef5350"
        android:text="Delete Task"
        android:textColor="@android:color/background_light"/>

</RelativeLayout>
