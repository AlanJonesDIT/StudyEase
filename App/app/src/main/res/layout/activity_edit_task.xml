<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alanhughjones.studyeasy.EditTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/edit_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="@string/edit_task"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/edit_task_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edit_new_task"
            android:layout_alignBottom="@+id/edit_new_task"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@id/edit_new_task"
            android:textAlignment="textEnd"
            android:background="@android:color/transparent"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:textAllCaps="false" />

    </RelativeLayout>


    <TextView
        android:id="@+id/input_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="127dp"
        android:text="@string/task_name_input"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_task_input"
        android:layout_width="297dp"
        android:hint="@string/task_name_input"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input_edit_title"
        android:layout_marginTop="152dp"
        android:autoLink="none"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/edit_duedate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input_edit_title"
        android:layout_marginTop="236dp"
        android:text="@string/duedate_input"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/edit_datepick_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/input_edit_title"
        android:layout_marginBottom="249dp"
        android:background="@color/colorPrimary"
        android:text="@string/change_date"
        android:textColor="@android:color/background_light"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/delete_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="#ef5350"
        android:text="@string/delete_task"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
